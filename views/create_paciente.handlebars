   <h2>Crear un Nuevo Paciente</h2>
   <p style="color:green;">{{message}}</p>
 <form action="../paciente/new" method="POST">
  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input type="text" name="Name" id="Name" value="" placeholder="Introduzca el nombre paciente" class="form-control">
  </div> 
  <div class="form-group">
    <label for="apellido">Apellido:</label>
    <input type="text" name="surname" id="surname" value="" placeholder="Introduzca el Apellido paciente" class="form-control">
  </div>
  <div class="form-group">
    <label for="fechaNacimiento">Fecha Nacimiento:</label>
    <input type="date" name="birth" id="birth" value="" placeholder="Introduzca Fecha Nacimiento" class="form-control">
  </div>
  <div class="form-group">
    <label for="genero">Genero:</label>
    <input type="text" name="gender" id="gender" value="" placeholder="Introduzca el Genero paciente" class="form-control">
  </div>
  <div class="form-group">
    <label for="direccion">Dirección:</label>
    <input type="text" name="address" id="address" value="" placeholder="Introduzca la dirección paciente" class="form-control">
  </div>
  <div class="form-group">
    <label for="mail">Correo:</label>
    <input type="email" name="mail" id="mail" value="" placeholder="Introduzca el correo" class="form-control">
  </div>
  <div class="form-group">
    <label for="HourStart">Estado Civil:</label>
    <input type="text" name="civilstatus" id="civilstatus" value="" placeholder="Introduzca Estado Civil del paciente" class="form-control">
  </div>
  <input type="submit" value="Enviar">
</form>